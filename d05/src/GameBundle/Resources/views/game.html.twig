<!DOCTYPE>
<html>
    <head>
    </head>
    <body>
        {{message}}
        <div style='display: flex;'>
            <div>
                <table style="border: 1px solid black;">
                    <tr>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[0][0]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[0][1]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[0][2]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[0][3]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[0][4]| raw}}</td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[1][0]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[1][1]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[1][2]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[1][3]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[1][4]| raw}}</td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;" width="100px" height="100px" >{{map[2][0]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[2][1]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[2][2]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[2][3]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[2][4]| raw}}</td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[3][0]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[3][1]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[3][2]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[3][3]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[3][4]| raw}}</td>
                    </tr>
                    <tr>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[4][0]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[4][1]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[4][2]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[4][3]| raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{map[4][4]| raw}}</td>
                    </tr>
                </table>
                 <a href="/game/up"><button>Up</button></a>
                <a href="/game/down"><button>Down</button></a>
                <a href="/game/left"><button>Left</button></a>
                <a href="/game/right"><button>Right</button></a><br>
                {% if fight == true %}
                    <a href="/fight/new/"><button>Fight</button></a><br>
                {% endif %}
                <a href="/options/"><button>Options</button></a>
            </div>
            <div style="padding-left:20%">
                <table style="border: 1px solid black;">
                    <tr>
                        <th style="border: 1px solid black;" width="100px" height="100px">Title</td>
                        <th style="border: 1px solid black;" width="100px" height="100px">Captured</td>
                    </tr>
                    {% for m in movies %}
                    <tr>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{m.title | raw}}</td>
                        <td style="border: 1px solid black;" width="100px" height="100px">{{m.captured | raw}}</td>
                    </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
    </body>
</html>
